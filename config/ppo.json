{
    "type": "ppo_agent",

    "update_mode": {
        "unit": "episodes",
        "batch_size": 64,
        "frequency": 4
    },
    "memory": {
        "type": "replay",
        "include_next_states": false,
        "capacity": 10000
    },

    "step_optimizer": {
        "type": "adam",
        "learning_rate": 1e-3
    },
    "summarizer": {
        "directory": "./board",
        "steps": 50,
        "labels": [
            "graph",
            "gradients_scalar",
            "regularization",
            "inputs",
            "losses",
            "variables",
            "total-loss"
        ]
    }
}
